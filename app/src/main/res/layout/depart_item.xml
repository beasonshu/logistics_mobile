<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:paddingLeft="10dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.60"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/part_leftTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="材料号："
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/part_packageId"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000"
                android:textSize="18sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/part_imaginary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/imaginary_icon"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件   数："
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/part_sumcount"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="20件"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/part_billId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运输订单："
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/part_billId1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BGTMB12013000103"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/part_spotName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起运地："
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/part_spotName1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="1422热轧2#钢卷库"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/part_grossWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="毛重(吨)："
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/part_grossWeight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="121212"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/part_destName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地："
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/part_destName1"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="梅山冶金公司9号路文腾金属制品公司"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/part_netWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="净重(吨)："
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/part_netWeight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="121212"
                android:textColor="@color/gray"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/part_product_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品种："
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/part_product_type1"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:text="热轧卷"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/part_contractId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同号："
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/part_contractId1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I2A0000350"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/part_imageButtoniodl_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:background="@drawable/delete_button"
        android:gravity="center" />

</LinearLayout>