<?xml version="1.0" encoding="utf-8"?>
<!-- MainMenuActivity -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget34"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mainmenu"
    android:orientation="vertical" >

    <!-- top -->

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="vertical" >


        <!-- 标题 -->


        <!--
             <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            标题

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="欢迎进入股份车载移动终端系统"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:textStyle="bold" >
            </TextView>
        </LinearLayout>
        -->
        <!-- 用户信息 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="95dp"
            android:layout_marginRight="95dp"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textViewmain_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="皇甫姓名"
                android:textColor="@color/white" >
            </TextView>

            <TextView
                android:id="@+id/textViewmain_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="沪A 12345"
                android:textColor="@color/white" >
            </TextView>

            <TextView
                android:id="@+id/textViewmain_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="JC8871233"
                android:textColor="@color/white" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:baselineAligned="false"
        android:layout_marginLeft="95dp"
        android:layout_marginRight="95dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/imageButtonmain_mybill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="订单"
                android:textColor="@color/white"
                android:drawableTop="@drawable/task"/>

            <TextView
                android:id="@+id/imageButtonmain_sign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:text="签收"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:drawableTop="@drawable/sign_arr"/>

            <TextView
                android:id="@+id/imageButtonmain_schedule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="日志"
                android:visibility="gone"
                android:textColor="@color/white"
                android:drawableTop="@drawable/log_icon"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/imageButtonmain_help"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="帮助"
                android:visibility="gone"
                android:textColor="@color/white"
                android:drawableTop="@drawable/help_icon"/>

            <TextView
                android:id="@+id/imageButtonmain_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="热线"
                android:textColor="@color/white"
                android:drawableTop="@drawable/phone_icon"/>
            <TextView
                android:id="@+id/imageButtonmain_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="设置"
                android:textColor="@color/white"
                android:drawableTop="@drawable/setting_icon"/>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>