<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:baselineAligned="false"
    android:paddingLeft="10dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/sign_leftTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="材料号："
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sign_confirm_packId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70867060200"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/sign_product_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品种："
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sign_confirm_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="热轧卷"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" >

                <TextView
                    android:id="@+id/sign_spotName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起运地："
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sign_confirm_landingspotName"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="1422热轧2#钢卷库"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/sign_grossWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="毛重(吨)："
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sign_confirm_grossWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="121212"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" >

                <TextView
                    android:id="@+id/sign_contractId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合同号："
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sign_confirm_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I2A0000350"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/sign_netWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="净重(吨)："
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/sign_confirm_netWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="121212"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>