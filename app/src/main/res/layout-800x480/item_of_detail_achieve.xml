<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayoutdl1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/item_bg_120_2"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp" >

        <RelativeLayout
            android:id="@+id/go_to_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="60dp" >

            <TextView
                android:id="@+id/textViewioda_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="50/100"
                android:textColor="@color/gray"
                android:textSize="16sp" />
                   <ImageView
                    android:id="@+id/achieve_levelStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star" 
                    android:layout_toRightOf="@+id/textViewioda_sum"/>
                   <TextView
                android:id="@+id/textViewioda_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/achieve_levelStar"
                android:layout_marginLeft="30dp"
                android:text="无异常"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewioda_sum"
                android:text="毛重（吨）："
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewioda_gw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView5"
                android:layout_toRightOf="@+id/textView5"
                android:text="100.999"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView5"
                android:text="净重（吨）："
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewioda_nw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView7"
                android:layout_toRightOf="@+id/textView7"
                android:text="100.001"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView7"
                android:text="下发时间："
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewioda_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView4"
                android:layout_toRightOf="@+id/textView4"
                android:text="12-21 22:00"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_toLeftOf="@+id/go_to_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/textViewioda_pickid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="001.1Q12345678"
                android:textColor="@color/black"
                android:textSize="18sp" />
                <TextView
                android:id="@+id/tv_ddyxm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textViewioda_pickid"
                android:layout_toRightOf="@+id/textViewioda_pickid"
                android:text="调度员：司马姓名，诸葛姓名"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewioda_pickid"
                android:text="提货单号："
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewioda_origin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:text="提货点：硅钢延伸库硅钢延伸库C88"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewioda_billid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView1"
                android:layout_toRightOf="@+id/textView1"
                android:text="ABCDE1234567890"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewioda_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textViewioda_origin"
                android:text="目的地：铁路库 D库"
                android:textColor="@color/gray"
                android:textSize="16sp" />
        </RelativeLayout>
 </RelativeLayout>
    
</RelativeLayout>
