<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/billTopbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rail" >

        <TextView
            android:id="@+id/qsbillid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="签收号:"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:textSize="23sp" />

        <Button
            android:id="@+id/sign_cancel_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:background="@drawable/btn_left_bg"
            android:text="返回"
            android:textColor="@android:color/white"
            android:textSize="15sp" >
        </Button>

        <Button
            android:id="@+id/sign_confirm_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:background="@drawable/btn_bg"
            android:text="确认"
            android:textColor="@android:color/white"
            android:textSize="15sp" >
        </Button>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp" >

            <ImageButton
                android:id="@+id/image_photo"
                android:layout_width="200dp"
                android:layout_height="fill_parent"
                android:background="@color/black" >
            </ImageButton>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="5dp" >

                <Button
                    android:id="@+id/sign_pic_button"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="拍         照" >
                </Button>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/readioButton01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="正常"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/readioButton02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="非正常"
                        android:textColor="@color/black" />

                    <RadioButton
                        android:id="@+id/readioButton03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="拒绝"
                        android:textColor="@color/black" />
                </RadioGroup>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <EditText
                        android:id="@+id/sign_pic_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="输入备注信息" />

                    <Spinner
                        android:id="@+id/sp1"
                        android:layout_width="300dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawSelectorOnTop="true"
                        android:text="下拉菜单"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/sign_confirm_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4" >
        </ListView>
    </LinearLayout>

</LinearLayout>